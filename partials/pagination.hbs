<!--- PAGINATION SECTION --->
<nav class="pagination" role="pagination">

	<!--- Previous page --->
	{{#if prev}}
		<a class="newer-posts" href="{{page_url prev}}">
			<i class="fa fa-chevron-circle-left"></i> Newer Posts
		</a>
	{{/if}}
		
	<!--- Page Number --->
	<span class="pagenumber">Page {{page}} / {{pages}}</span>

	<!--- Next page --->
	{{#if next}}
		<a class="older-posts" href="{{page_url next}}">
			Older Posts 
			<i class="fa fa-chevron-circle-right"></i>
		</a>
	{{/if}}
</nav>
